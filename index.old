<script>
$(document).ready(function() {

    // RAY-TYPE SELECTION 
    $('#manual').show();
    $('#marginal').hide();
    $('#pupil').hide();

    $('input[type=radio][name=raytype]').change(function() {
        if (this.value == 'manual') {
            //alert("Allot Thai Gayo Bhai");
            $('#manual').show();
            $('#marginal').hide();
            $('#pupil').hide();
        }
        else if (this.value == 'marginal') {
            //alert("Transfer Thai Gayo");
            $('#manual').hide();
            $('#marginal').show();
            $('#pupil').hide();
        }
        else if (this.value == 'pupil') {
            //alert("Transfer Thai Gayo");
            $('#manual').hide();
            $('#marginal').hide();
            $('#pupil').show();
        }

    });

    // CONJUGATE-PAIR-TYPE SELECTION 
    $('#byObject').show();
    $('#byImage').hide();

    $('input[type=radio][name=conjugatetype]').change(function() {
        if (this.value == 'byObject') {
            $('#byObject').show();
            $('#byImage').hide();
        }
        else if (this.value == 'byImage') {
            $('#byObject').hide();
            $('#byImage').show();
        }

    });



});
</script>





